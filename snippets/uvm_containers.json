      "class ${1:<class_name>} extends ${2:<base_class>};",
      "\t`uvm_component_utils($1);\n",
      "\t/*  COMPONENTS  */\n",
      "\t/*  VARIABLES  */\n\n",
      "\tfunction new(string name=\"$1\", uvm_component parent);",
      "\t\tsuper.new(name, parent);",
      "\tendfunction: new\n\n",
      "\t$0",
      "endclass: $1"
    ],
    "description": "UVM component class template"
  },
